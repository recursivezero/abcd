---
import "@/assets/styles/tile.css";
import BackButton from "@/components/BackButton.astro";
import Help from "@/components/Help.astro";
import NumberGrid from "@/components/NumberGrid.astro";
import SharePopover from "@/components/ShareButton.astro";
import BaseLayout from "@/layouts/Base";

const title = "English Numbers";
const numbers = Array.from({ length: 10 }, (_, i) => i + 1);

const meta = {
  title: "Numbers",
  description: "Explore English numbers from 1 to 10 with interactive multiplication tables for each number."
};
---

<BaseLayout meta={meta}>
  <Fragment slot="header-left">
    <SharePopover />
    <Help title="Multiplication Tables" description="This page displays numbers and their multiplication tables." />
  </Fragment>
  <div class="container__page">
    <div class="page__header">
      <BackButton />
      <h2 class="page__title">{title}</h2>
    </div>

    <div class="page__content">
      <div class="page__grid">
        {numbers.map((number) => <NumberGrid number={number} numbers={numbers} />)}
      </div>
    </div>
  </div>
</BaseLayout>
