---
import AlphabetComponent from "@/components/Alphabet.astro";
import BackButton from "@/components/BackButton.astro";
import Help from "@/components/Help.astro";
import BaseLayout from "@/layouts/Base";

import { varnmala_english } from "@/utils/characters";
import SharePopover from "@/components/ShareButton.astro";
---

<BaseLayout meta={{ title: "English" }}>
  <BackButton />
  <Fragment slot="header-right">
    <SharePopover />
    <Help
      title="English "
      description="It is a collection of alphabets in English. It is used to teach kids the basics of language."
    />
  </Fragment>

  <article class="container__alphabets">
    <AlphabetComponent list={varnmala_english} title="English" />
  </article>
</BaseLayout>
