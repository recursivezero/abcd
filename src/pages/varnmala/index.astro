---
import "@/assets/styles/varnmala/index.css";
import Back from "@/components/Back.astro";
import BaseLayout from "@/layouts/Base";

const sections = [
  {
    title: "English",
    description: "Learn the basic English alphabets",
    href: "english"
  },
  {
    title: "Hindi",
    description: "Learn the basic Hindi alphabets",
    href: "hindi"
  },
  {
    title: "Barahkhadi",
    description: "Learn the basic barahkhadi characters",
    href: "barahkhadi"
  },
  {
    title: "Listen",
    description: "Practice reading alphabets with audio support",
    href: "listen"
  },
  {
    title: "Write",
    description: "Practice writing alphabets ",
    href: "write"
  },
  {
    title: "Play",
    description: "Listen and play with the basic Alphabet characters",
    href: "play"
  }
];

const title = "Varnmala";
---

<BaseLayout meta={{ title: "Varnmala" }}>
  <Back />
  <div class="container__varnmala">
    <div class="varnmala__header">
      <h2 class="title">{title}</h2>
    </div>
    <ul class="list__alphabets">
      {
        sections.map((section, index) => (
          <li class="card" style={`animation-delay: ${index * 100}ms`}>
            <a class="card__link" href={`/varnmala/${section.href}`}>
              <div class="card__content">
                <h2 class="category__title">{section.title}</h2>
                <p class="category__description">{section.description}</p>
                <span class="card__arrow">â†’</span>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</BaseLayout>
