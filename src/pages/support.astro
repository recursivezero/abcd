---
import BaseLayout from "@/layouts/Base";
import { Content } from "../../.github/SUPPORT.md";
---

<BaseLayout meta={{ title: "Support" }}>
  <div class="support-container">
    <div class="support-content">
      <Content />
    </div>
  </div>
</BaseLayout>

<style is:global>
  
  .support-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
  }
  .support-content {
    line-height: 1.7;
    color: var(--text-main);
  }
  .support-content h1,
  .support-content h2 {
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--divider);
    padding-bottom: 0.5rem;
  }
  .support-content h1 {
    font-size: 2rem;
  }
  .support-content h2 {
    font-size: 1.75rem;
  }
  .support-content a {
    color: var(--c-primary);
    text-decoration: none;
    font-weight: 700; 
  }
  .support-content a:hover {
    text-decoration: underline;
  }
  .support-content ul {
    padding-left: 2rem;
    margin-top: 1rem;
  }
  .support-content li {
    margin-bottom: 0.5rem;
  }
  
  .support-content blockquote {
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    border-left: 4px solid var(--c-primary);
    border-radius: 4px;
    background-color: rgba(59, 130, 246, 0.1);
  }
  .support-content blockquote p {
    margin: 0;
  }
</style>