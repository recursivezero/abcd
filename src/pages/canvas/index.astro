---
import CanvasIcon from "@/assets/icons/canvas.svg";
import QuoteIcon from "@/assets/icons/quote.svg";
import "@/assets/styles/cards/main.css";
import Back from "@/components/Back.astro";
import SharePopover from "@/components/ShareButton.astro";
import BaseLayout from "@/layouts/Base";

const meta = {
  title: "Canvas",
  description: "Choose between the Canvas Image Generator and the Quote Designer."
};
---

<BaseLayout meta={meta}>
  <Back />
  <Fragment slot="header-right">
    <SharePopover title={meta.title} description={meta.description} />
  </Fragment>
  <div class="selection-container">
    <h1 class="selection-title">Select a creative mode</h1>
    <div class="selection-buttons-grid">
      <a href="/canvas/text" class="selection-card">
        <div class="card-icon">
          <CanvasIcon />
        </div>
        <h2 class="card-title">Text Designer</h2>
        <p class="card-description">Create unique images with custom text and time.</p>
      </a>
      <a href="/canvas/quote" class="selection-card">
        <div class="card-icon">
          <QuoteIcon />
        </div>
        <h2 class="card-title">Quote Designer</h2>
        <p class="card-description">Design beautiful and shareable quotes with ease.</p>
      </a>
    </div>
  </div>
</BaseLayout>
