---
import "@/assets/styles/header.css";
import { APP_NAME } from "@/utils/constants";
import { Picture } from "astro:assets";
import logoImage from "/public/assets/images/512x512.png";
---

<header class="header">
  <div class="header__brand">
    <a href="/" class="logo__link">
      <Picture src={logoImage} formats={["png", "webp"]} alt="template logo" class="logo" />
      <span title={APP_NAME}>{APP_NAME}</span>
    </a>
  </div>
  <div class="title text__balance">Welcome to the corner of learning</div>

  <!--<div class="caption">
    <a href="/" class:list={{ "is-active": Astro.url.pathname === "/home" || Astro.url.pathname === "/" }}>Home</a>
    <a href="/about" class:list={{ "is-active": Astro.url.pathname.startsWith("/about") }}>About</a>
    <a href="/parent" class:list={{ "is-active": Astro.url.pathname.startsWith("/parent") }}>Parents</a>
    <a href="/teacher" class:list={{ "is-active": Astro.url.pathname.startsWith("/teacher") }}>Teachers</a>
  </div>-->

  <div class="action-group">
    <slot name="left" />
    <slot name="right" />
  </div>
</header>
<div class="header-spacer"></div>

<style>
  .back {
    color: var(--color-text);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    background: rgba(255, 255, 255, 0.1);
    transition: background 0.2s ease;
  }

  .back:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  :global(.action-group button),
  :global(.action-group a) {
    white-space: nowrap;
  }

  .header-spacer {
    height: var(--header-h);
  }

  @media (max-width: 768px) {
    .caption {
      opacity: 0;
      pointer-events: none;
      height: 0;
      padding: 0;
      border: none;
      overflow: hidden;
    }
  }

  .title {
    font-size: 2.2rem;
    font-weight: 700;
    text-align: center;
    margin: 1.2rem 0 0.8rem 0;
    color: var(--color-primary, #2a4d8f);
    letter-spacing: 0.02em;
    line-height: 1.2;
    text-shadow: 0 2px 8px rgba(0,0,0,0.07);
    transition: font-size 0.2s;
  }

  @media (max-width: 768px) {
    .title {
      font-size: 1.3rem;
      margin: 0.7rem 0 0.5rem 0;
      padding: 0 0.5rem;
    }
  }
</style>
